{
    "$schema" : "https://json-schema.org/draft/2020-12/schema",
    "$id" : "https://cybersecuritypoet.github.io/koala-json-schema/router.schema.json",
    "title" : "Service definition",
    "description" : "",
    "type" : "object",
    "additionalProperties" : false,
    "properties":
    {
        "skip":
        {
            "type" : ["boolean","null"],
            "description" : "Skip object."
        },
        "name":
        {
            "type" : "string",
            "description" : "Name of the service instance",
            "pattern" : "^[a-zA-Z0-9_\\-]+$"
        },
        "desc":
        {
            "type" : ["string","null"],
            "description" : "Objects description."
        },
        "templates":
        {
            "type" : ["array","null"],
            "description" : "Templates to be applied to the object.",
            "items" :
            {
                "type" : "string"
            }
        },
        "network":
        {
            "type" : "string",
            "description": "Network name, for network-bound services."
        },
        "endpoints":
        {
            "type" : ["array","null"],
            "description" : "List of endpoints for the service.",
            "items" :
            {
                "description" : "Service Endpoint",
                "$ref" : "https://cybersecuritypoet.github.io/koala-json-schema/service.endpoint.schema.json"
            }
        }
    }
}